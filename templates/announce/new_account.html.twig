{% extends 'base.html.twig' %}

{% block title %}Ronron | Déposer une annonce{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-3">Vos informations</h1>

            {{ form_start(formRegister, {'attr': {'id': 'formRegister'}}) }}
            {{ form_row(formRegister.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(formRegister.pseudo, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(formRegister.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(formRegister.phone, { 'help': 'Veuillez fournir votre numéro de téléphone pour que, dans le cas où quelqu\'un retrouve votre chat, cette personne puisse vous contacter.' }, {'attr': {'class': 'form-text'}}) }}
            <br>
            {{ form_row(formRegister.password.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(formRegister.password.first, { 'help': 'Votre mot de passe doit contenir au minimum 8 caractères, dont au moins une minuscule, une majuscule, un nombre, et un caractère spécial.' }, {'attr': {'class': 'form-text'}}) }}
           <br>
            {{ form_row(formRegister.password.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(formRegister.agreeTerms) }}

            <div class="text-center mt-3">
                <button class="btnSoumission" type="submit">Suivant</button>
            </div>

            {{ form_end(formRegister) }}
        </div>
    </div>


{% endblock %}