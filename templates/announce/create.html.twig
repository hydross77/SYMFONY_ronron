{% extends 'base.html.twig' %}

{% block title %}Ronron | Poster une annonce{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-3">Information de l'annonce</h1>
            <hr>
            {{ form_start(form) }}
            {{ form_row(form.type) }}
            {{ form_row(form.dateCat) }}
            {{ form_row(form.cp) }}
            {{ form_row(form.city) }}
            {{ form_row(form.street, {
                'attr': {
                    'placeholder': 'Rue (optionnel, mais conseill√© pour maximiser les chances de retrouvailles)',
                }
            }) }}
            {{ form_row(form.country) }}
            {{ form_row(form.description) }}
            {{ form_errors(form) }}
            <button class="btnSoumission" type="submit">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}