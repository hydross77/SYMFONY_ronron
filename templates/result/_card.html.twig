
    <div class="card" style="width: 18rem; height: 25rem;">
        {% if announce.cat.picture %}
            <img style="height: 200px; object-fit: cover" src="{{ asset('uploads/picturechat/' ~ announce.cat.picture) }}" alt="Photo du chat">
        {% else %}
            <div class="display-3 text-center"><i style="height: 200px; object-fit: cover" class="fa-solid fa-cat"></i></div>
        {% endif %}
        <div class="card-body">
            <h5 class="card-title">{{ announce.cat.name }} | {{ announce.cat.sexe }}</h5>
            <h4><i class="fa-solid fa-location-dot text-danger"></i> {{ announce.city }}, {{ announce.country }}</h4>
            <h4><i class="fa-solid fa-cat"></i> {{ announce.cat.breed }}</h4>
            <h2 class="text-center">{{ announce.cat.name }} est {{ announce.type }} depuis le {{ announce.dateCat|date('d/m/Y') }}</h2>
            <div class="viewProfil">
                {% if app.user %}
                    <i id="favorite-icon-{{ announce.cat.id }}" class="{{ app.user and announce.cat in app.user.favorite ? 'fa-solid' : 'fa-regular' }} fa-heart" style="cursor: pointer; color:red;" onclick="toggleFavorite({{ announce.cat.id }}, event)"></i>

                {% endif %}

                <a  class="text-dark" href="{{ path('app_announce_show', {'id': announce.id })}} "><i class="fa-solid fa-eye"></i></a>
            </div>
        </div>
    </div>